@model HomeDetailViewModel
@{
    ViewBag.Title = "学生详情打扰页";
}
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Student.Name</h1>
            </div>
            <div class="card-body text-center">
                <img src="~/img/test_1.jpg" alt="Alternate Text" class="card-img-top" style="width:600px;" asp-append-version="true"/>
            </div>
        </div>
    </div>
    <div class="col-8">
        <div class="card">
            <div class="card-header">
                <h1>@ViewBag.Title</h1>
            </div>
            <ul class="list-group">
                <li class="list-group-item">Id: @Model.Student.Id</li>
                <li class="list-group-item">姓名: @Model.Student.Name</li>
                <li class="list-group-item">班级: @Model.Student.ClassName</li>
                <li class="list-group-item">邮箱: @Model.Student.Email</li>
            </ul>
        </div>
    </div>
</div>


